<?xml version="1.0" encoding="utf-8"?>
<!--
Loco's own Loco configuration
-->
<bundle name="Loco Translate (v2 translations)">
  <domain name="loco">
    <project>
      <source>
        <directory>src</directory>
        <directory>tpl</directory>
      </source>
      <target>
        <directory>lang</directory>
      </target>
      <template>
        <file>lang/loco.pot</file>
      </template>
    </project>
  </domain>
  <!-- globally excluded locations will never be searched -->
  <exclude>
    <directory>lib</directory>
    <directory>pub</directory>
    <directory>test</directory>
  </exclude>
</bundle>