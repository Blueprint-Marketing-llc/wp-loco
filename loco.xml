<?xml version="1.0" encoding="utf-8"?>
<bundle name="Loco Translate (v2 translations)">
  <domain name="loco">
    <project>
      <source>
        <file>loco.php</file>
        <directory>src</directory>
        <directory>tpl</directory>
      </source>
      <target>
        <directory>languages</directory>
      </target>
      <template>
        <file>languages/loco.pot</file>
      </template>
    </project>
  </domain>
  <exclude>
    <directory>lib</directory>
    <directory>pub</directory>
    <directory>test</directory>
  </exclude>
</bundle>